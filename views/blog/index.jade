extends ../layout.jade
block content
 -if(message)
  div(class="alert alert-success alert-dismissible", role="alert")
   button(type="button", class="close", data-dismiss="alert", aria-label="Close")
    span(aria-hidden="true") &times;
   p!= message

 .contaner
  h2 All blogs
  hr
  -if(blogs)
   .container
     - each blog in blogs
       h3= blog.title
       h2= blog.author
       p= blog.content
       p