extends ../layout.jade
block content
  .container
    h2.row Write a new blog
    form(class="form", method="post", action="/blog/create")
      .form-group
        label(for="title") Title :
        input(class="form-control", type="text", name="title", required=true)
      .form-group
        label(for="content") Content :
        textarea(class="form-control", style="resize:vertical", rows="7", name="content", required=true)
      input(type="text", name="author", value=req.user.id, hidden=true, required=true)
      input(class="btn btn-success" type="submit", value="POST BLOG")
   