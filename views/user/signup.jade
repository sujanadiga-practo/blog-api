extends ../layout.jade
block content
	div(class="col-md-6")
	
	div(class="col-md-6")

		h1 Register
		-if(message)
			div(class="alert alert-danger alert-dismissible", role="alert")
				button(type="button", class="close", data-dismiss="alert", aria-label="Close")
					span(aria-hidden="true") &times;
				p!= message
		form(class="form", action="/user/create", method="POST")
			.form-group
				label(for="name") Name :
				input(class="form-control", type="text", id="name", name="name", placeholder="Enter fullname", required=true)
			.form-group
				label(for="username") Username :
				input(class="form-control", type="text", id="username", name="username", placeholder="Enter username", required=true)
			.form-group
				label(for="email") Email : 
				input(class="form-control", type="email", id="email", name="email", placeholder="Enter email", required=true)
			.form-group
				label(for="password") Password :
				input(class="form-control", type="password", id="pwd", name="password", placeholder="Enter password", required=true)

			input(class="btn btn-success", type="submit", value="SIGN UP")

